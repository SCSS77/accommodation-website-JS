{{#if searchForm }}
<form method="post" action="{{ url }}" role="search" class="search-form {{ styleModifier }}">
    {{#each searchLabel }}
    <label for="search" class="search-form__label is-vishidden {{ styleModifier }}">{{{ label }}}</label>
    {{/ each }}
    <div class="search-form__body">
        {{> atoms-input type="search" placeholder="Encuentra tu mejor estancia" }}
        {{> atoms-button type="submit" text="Buscar" }}
    </div>
</form>
{{/ if }}
